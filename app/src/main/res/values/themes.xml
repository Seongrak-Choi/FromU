<resources>
    <!-- Base application theme. -->
    <style name="Theme.FromU" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimationDuration">1</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_empty</item>
        <item name="postSplashScreenTheme">@style/SplashTheme</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <!-- ************ Font ************ -->


    <!-- EfDiary -->
    <style name="EfDiary" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/ef_diary</item>
    </style>

    <style name="EfDiary.ffffff">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EfDiary.ffffff.14dp">
        <item name="android:textSize">14dp</item>
    </style>


    <!-- PretendardRegular -->
    <style name="PretendardRegular" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="PretendardRegular.ffffff">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PretendardRegular.ffffff.14dp">
        <item name="android:textSize">14dp</item>
    </style>


    <style name="PretendardRegular.000000">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="PretendardRegular.000000.16dp">
        <item name="android:textSize">16dp</item>
    </style>


    <!-- PretendardMedium -->

    <style name="PretendardMedium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="PretendardMedium.000000">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PretendardMedium.000000.16dp">
        <item name="android:textSize">16dp</item>
    </style>

</resources>